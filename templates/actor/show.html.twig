{% extends 'base.html.twig' %}
{% block title %}Acteur{{ actor.id }}{% endblock %}

{% block body %}

<div class="media">
  <div class="media-body">
    <h1 class="mt-0"> {{ actor.name }}</h1>
  </div>
  {% for program in programs %}
        <div>
            <h2>{{ loop.index }}.{{ program.title }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
</div>
<a href="{{ path('actor_index') }}">
    Retour à la liste des acteurs
</a>
{% endblock %}
